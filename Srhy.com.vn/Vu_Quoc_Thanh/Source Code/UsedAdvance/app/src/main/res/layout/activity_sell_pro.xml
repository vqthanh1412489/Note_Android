<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    android:paddingRight="2dp"
    android:paddingLeft="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#df231d"
            app:tabIndicatorHeight="2dp"
            app:tabMode="fixed">

        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitleSell"
            style="@style/textViewSell.Content.Title"
            android:layout_weight="7"
            android:text="TextView" />

        <TextView
            style="@style/textViewSell.Content.Title.Price"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:id="@+id/textViewPriceSell"
            android:text="TextView" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewIconUserSell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            style="@style/NameUserSell"
            android:id="@+id/textViewNameUserSell"
            android:layout_weight="7"
            android:text="TextView" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/textView12"
            style="@style/textViewSell"
            android:text="@string/type" />

        <TextView
            android:id="@+id/textViewTypeSell"
            style="@style/textViewSell.Content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            style="@style/textViewSell"
            android:text="@string/zone" />

        <TextView
            android:id="@+id/textViewZoneSell"
            style="@style/textViewSell.Content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            style="@style/textViewSell"
            android:text="@string/category" />

        <TextView
            android:id="@+id/textViewCateSell"
            style="@style/textViewSell.Content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            style="@style/textViewSell"
            android:text="@string/status" />

        <TextView
            android:id="@+id/textViewStatusSell"
            style="@style/textViewSell.Content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView20"
            style="@style/textViewSell"
            android:text="@string/address" />

        <TextView
            android:id="@+id/textViewAddressSEll"
            style="@style/textViewSell.Content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonFacebook"
            style="@style/ButtonSell"
            app:srcCompat="@drawable/facebook" />

        <ImageButton
            android:id="@+id/imageButtonGmail"
            style="@style/ButtonSell"
            app:srcCompat="@drawable/gmail" />

        <ImageButton
            android:id="@+id/imageButtonSMS"
            style="@style/ButtonSell"
            app:srcCompat="@drawable/sms" />

        <ImageButton
            android:id="@+id/imageButtonCall"
            style="@style/ButtonSell"
            app:srcCompat="@drawable/call" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></View>




</LinearLayout>