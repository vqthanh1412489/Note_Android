<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/ct_line_hl"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewHinhPro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:weightSum="10"
            android:orientation="vertical">

            <TextView
                style="@style/TextView_Line_Product.Name"
                android:layout_weight="6"
                android:id="@+id/textViewTenPro"
                android:text="TextView" />

            <TextView
                android:gravity="top"
                android:layout_marginBottom="10dp"
                style="@style/TextView_Line_Product.Price"
                android:layout_weight="4"
                android:id="@+id/textViewGiaPro"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>