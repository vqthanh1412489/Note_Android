<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/ct_line_hl"
        android:layout_margin="10dp"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageViewIconSPAdmin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:weightSum="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="6"
                android:id="@+id/textViewTenSPAdmin"
                style="@style/TextView_Line_Product.Name"
                android:text="TextView" />

            <TextView
                android:gravity="top"
                android:id="@+id/textViewGiaSPAdmin"
                style="@style/TextView_Line_Product.Price"
                android:layout_weight="4"
                android:text="TextView" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>