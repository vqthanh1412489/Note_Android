<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="10dp"
    android:background="@color/While"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        style="@style/Title"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/add_category" />

    <EditText
        android:id="@+id/editTextIDCategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/input_id_category"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextNameCategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/input_name_category" />

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageViewIconCate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:srcCompat="@drawable/nophoto128" />

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:background="@null"
                android:id="@+id/imageButtonCameraAddCate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/camera" />

            <ImageButton
                android:background="@null"
                android:id="@+id/imageButtonFolderAddCate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gallery" />

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:background="@null"
        android:layout_gravity="right"
        android:id="@+id/imageButtonOkAddCate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ok48" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewAddCateAdmin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="LARGE_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_big">
    </com.google.android.gms.ads.AdView>

</LinearLayout>
